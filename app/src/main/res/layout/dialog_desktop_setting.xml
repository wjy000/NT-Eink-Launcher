<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_dialog_applist_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_number"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_seekbar"
        android:textSize="15dp" />

    <SeekBar
        android:id="@+id/seekBar_listnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="5" />

    <TextView
        android:id="@+id/tv_listnumber_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="1åˆ—"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_dialog_listnumber_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shaper_apks_button_window_show"
            android:text="@string/dialog_con"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_dialog_listnumber_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shaper_apks_button_window_show"
            android:text="@string/dialog_auto"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_dialog_listnumber_cls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shaper_apks_button_window_show"
            android:text="@string/dialog_cls"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>